@page
@model C19Test.Pages.Cases.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Case</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Case.CaseID" />
            <div class="form-group">
                <label asp-for="Case.FirstName" class="control-label"></label>
                <input asp-for="Case.FirstName" class="form-control" />
                <span asp-validation-for="Case.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Case.LastName" class="control-label"></label>
                <input asp-for="Case.LastName" class="form-control" />
                <span asp-validation-for="Case.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Case.SNumber" class="control-label"></label>
                <input asp-for="Case.SNumber" class="form-control" />
                <span asp-validation-for="Case.SNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Case.ExposureDate" class="control-label"></label>
                <input asp-for="Case.ExposureDate" class="form-control" />
                <span asp-validation-for="Case.ExposureDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Case.LocationID" class="control-label"></label>
                <select asp-for="Case.LocationID" class="form-control">
                    <option value="">-- Select Status --</option>
                    @foreach (var item in Model.LocationSL)
                    {
                        @if (item.LocationID == Model.Case.LocationID)
                        {
                            <option value="@item.LocationID" selected>@item.LocationDescription  </option>
                        }
                        else
                        {
                            <option value="@item.LocationID">@item.LocationDescription  </option>
                        }
                    }
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Case.StatusID" class="control-label"></label>
                <select asp-for="Case.StatusID" class="form-control">
                    <option value="">-- Select Status --</option>
                    @foreach (var item in Model.StatusSL)
                    {
                        @if (item.StatusID == Model.Case.StatusID)
                        {
                            <option value="@item.StatusID" selected>@item.Description  </option>
                        }
                        else
                        {
                            <option value="@item.StatusID">@item.Description  </option>
                        }
                    }
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
