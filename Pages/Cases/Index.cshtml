@model C19Test.Pages.Cases.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Case[0].FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Case[0].LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Case[0].SNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Case[0].ExposureDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Case[0].StatusID)
            </th>
            <th>
                Location
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Case) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ExposureDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Location.LocationDescription)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.CaseID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.CaseID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.CaseID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
